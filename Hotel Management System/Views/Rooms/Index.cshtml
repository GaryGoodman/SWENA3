</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Type)
